<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include layout="@layout/layout_header"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="440px"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="370px"
            android:layout_height="250px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75px"
            android:adjustViewBounds="true"
            android:src="#dedede" />


        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="220px"
            android:layout_alignBottom="@+id/iv"
            android:layout_alignLeft="@+id/iv"
            android:layout_alignRight="@+id/iv"
            android:layout_alignTop="@+id/iv"
            android:paddingBottom="50px"
            android:paddingTop="50px"
            android:src="@mipmap/camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325px"
            android:gravity="center"
            android:text="请上传身份证人脸照片"
            android:textColor="#000000"
            android:textSize="13sp" />

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="440px"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="370px"
            android:layout_height="250px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75px"
            android:adjustViewBounds="true"
            android:src="#dedede" />


        <ImageView
            android:id="@+id/camera2"
            android:layout_width="wrap_content"
            android:layout_height="220px"
            android:layout_alignBottom="@+id/iv2"
            android:layout_alignLeft="@+id/iv2"
            android:layout_alignRight="@+id/iv2"
            android:layout_alignTop="@+id/iv2"
            android:paddingBottom="50px"
            android:paddingTop="50px"
            android:src="@mipmap/camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325px"
            android:gravity="center"
            android:text="请上传身份证国徽照片"
            android:textColor="#000000"
            android:textSize="13sp" />

    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="440px"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="370px"
            android:layout_height="250px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75px"
            android:adjustViewBounds="true"
            android:src="#dedede" />


        <ImageView
            android:id="@+id/camera3"
            android:layout_width="wrap_content"
            android:layout_height="220px"
            android:layout_alignBottom="@+id/iv3"
            android:layout_alignLeft="@+id/iv3"
            android:layout_alignRight="@+id/iv3"
            android:layout_alignTop="@+id/iv3"
            android:paddingBottom="50px"
            android:paddingTop="50px"
            android:src="@mipmap/camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325px"
            android:gravity="center"
            android:text="请上传活体人脸照片"
            android:textColor="#000000"
            android:textSize="13sp" />

    </com.zhy.autolayout.AutoRelativeLayout>


    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginBottom="90px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:layout_marginTop="90px"
        android:background="@drawable/corner5_green"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</com.zhy.autolayout.AutoLinearLayout>